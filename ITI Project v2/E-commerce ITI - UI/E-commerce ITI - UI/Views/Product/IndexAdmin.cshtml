@model List<Product>
@{
	Layout = "_AdminLayout";
}
<link href="/css/IndexAdmin.css" rel="stylesheet" />
<h1>All Products</h1>
<table class="table  table-hover">
	<thead>
	<th>Sku</th>
	<th>Name</th>
	<th>Thumbnail</th>
	<th>Price</th>
	<th>Descripition</th>
	<th>Image</th>
	<th>CreateDate</th>
	<th>Stock</th>
	<th colspan="3">Details</th>
	</thead>
	<tbody>
		@foreach (Product prd in Model)
		{
			<tr>
				<td>@prd.Sku</td>
				<td>@prd.Name</td>
				<td><img src="~/img/@prd.Thumbnail" alt="Alternate Text" /></td>
				<td>@prd.Price</td>
				<td>@prd.Descripition</td>
				<td>@prd.Image</td>
				<td>@prd.CreateDate</td>
				<td>@prd.Stock</td>
				<td><a asp-controller="Product" asp-action="Details" asp-route-id="@prd.Id" class="Special">Details</a></td>
				<td><a asp-controller="Product" asp-action="UpdateForm" asp-route-id="@prd.Id" class="Special">Update</a></td>
				<td><a asp-controller="Product" asp-action="Delete" asp-route-id="@prd.Id" class="Special">Delete</a></td>
			</tr>
		}
	</tbody>
</table>
<a class="Special" asp-controller="Product" asp-action="InsertForm">Add Product</a>


